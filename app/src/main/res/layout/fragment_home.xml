<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_alarms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bbar_add_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/item_alarm"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/rv_alarms"
        app:layout_constraintEnd_toEndOf="@id/rv_alarms"
        app:layout_constraintStart_toStartOf="@id/rv_alarms"
        app:layout_constraintTop_toTopOf="@id/rv_alarms"
        app:layout_constraintVertical_bias="0.51"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/bbar_favorites"
        style="?attr/buttonBarButtonSide"
        android:text="Favorites"
        app:drawableTopCompat="@drawable/ic_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bbar_add_alarm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bbar_add_alarm"
        style="?attr/buttonBarButtonCenter"
        android:text="Add alarm"
        app:drawableTopCompat="@drawable/ic_add_alarm_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bbar_browse"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bbar_favorites" />

    <TextView
        android:id="@+id/bbar_browse"
        style="?attr/buttonBarButtonSide"
        android:text="Browse radio"
        app:drawableTopCompat="@drawable/ic_search_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bbar_add_alarm" />
</androidx.constraintlayout.widget.ConstraintLayout>