<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/clPrimary</item>
        <item name="colorPrimaryDark">@color/clPrimaryDark</item>
        <item name="colorAccent">@color/clAccent</item>
        <item name="colorSecondary">@color/clSecondary</item>
        <item name="radioBrowserCategory">@style/LightTheme.MaterialButton</item>
        <item name="buttonBarButtonSide">@style/LightTheme.BBar.Side</item>
        <item name="buttonBarButtonCenter">@style/LightTheme.BBar.Center</item>
        <item name="buttonText">@style/LightTheme.MaterialButtonText</item>
        <item name="buttonOutline">@style/LightTheme.ButtonOutline</item>
        <item name="textAlarmTime">@style/LightTheme.TextTime</item>
        <item name="textInputOutlined">@style/LightTheme.TextInputOutlined</item>
        <item name="android:windowBackground">@color/clBackground</item>
    </style>

    <style name="LightTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LightTheme.TextInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="LightTheme.MaterialButtonText" parent="Widget.MaterialComponents.Button.TextButton"></style>

    <style name="LightTheme.ButtonOutline" parent="Widget.MaterialComponents.Button.OutlinedButton"></style>

    <!-- Alarm Card -->
    <style name="LightTheme.ActionButton" parent="Widget.AppCompat.ActionButton" />

    <style name="LightTheme.DayOfWeek">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="LightTheme.TextTime" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/allerta_stencil</item>
        <item name="android:textSize">28sp</item>
        <!--        <item name="android:textColor">@color/clTimeText</item>-->
        <item name="android:background">@drawable/ripple_colored_unlim</item>
    </style>

    <!-- Bottom Bar  -->
    <style name="LightTheme.BBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LightTheme.BBar.Side" parent="LightTheme.BBar">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LightTheme.BBar.Center" parent="LightTheme.BBar">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
