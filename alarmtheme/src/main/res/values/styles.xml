<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="radioBrowserCategory">@style/LightTheme.MaterialButton</item>
        <item name="buttonBarButtonSide">@style/LightTheme.BBar.Side</item>
        <item name="buttonBarButtonCenter">@style/LightTheme.BBar.Center</item>
    </style>

    <style name="LightTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Alarm Card -->
    <style name="LightTheme.ActionButton" parent="Widget.AppCompat.ActionButton" />

    <style name="LightTheme.DayOfWeek" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorDayTextInactive</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Bottom Bar  -->
    <style name="LightTheme.BBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LightTheme.BBar.Side" parent="LightTheme.BBar">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LightTheme.BBar.Center" parent="LightTheme.BBar">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>